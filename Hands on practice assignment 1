#Find number of woman with height more than average but weight less than average. 

#installing the required packages

install.packages("data.table")
install.packages("datasets")
library("datasets")

setwd("C:/Users/rishika.sharma/Documents/MICA- Term 4/AMMA")

#storing women data in dataframe women 

women<-data.frame(women)

#Finding the average weight and height of the women in the data frame 

mean.height=mean(women$height)
mean.weight=mean(women$weight)

#finding the number of women whose height is greater than average and whose weight is less than the average
#Storing in a new dataframe 
women_df<-subset(women,height>mean.height & weight<mean.weight)

